<h2>Member page</h2>
<div class="span-12">
  <ul class="tabs">
    <li><a href="profile.html">Profile</a></li>
    <li class="active">Registraion details</li>
  </ul>
  <div class="form tab-form change-password-form">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <fieldset>
        <p><%= f.label :email %></p>
        <p><%= f.text_field :email %> <%= field_error :email %></p>

        <p><%= f.label :password %> <i>(leave blank if you don't want to change it)</i></p>
        <p><%= f.password_field :password %> <%= field_error :password %></p>

        <p><%= f.label :password_confirmation %></p>
        <p><%= f.password_field :password_confirmation %> <%= field_error :password_confirmation %></p>

        <p><%= f.label :current_password %></p>
        <p><%= f.password_field :current_password %> <%= field_error :current_password %></p>

        <p>
          <%= link_to "Update", "javascript:void(0);", :class => "button save", :id => "update_button" %>
          <%= link_to "Cancel", root_path, :class => "button cancel" %>
          <%= f.submit "Update", :class => "hidden-submit" %>
        </p>
      </fieldset>
    <% end %>
  </div>
</div>
<div class="span-12 last">
  <h3>Cancel my account</h3>
  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure want to remove your account?", :method => :delete %>.</p>
</div>

<script type="text/javascript">
  //<![CDATA[
    $(function() {
      $("#update_button").click(function () {
        $("#user_submit").click();
      });
      $('.tooltip img').error_tool_tip();
    });
  //]]>
</script>

